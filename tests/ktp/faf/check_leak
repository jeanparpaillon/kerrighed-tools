#
# File :        check_leaks
#
# Description:  Remote fork fails, fork locally succeeded.
#               It may create a memleak.
#
# Author:       Matthieu FertrÃ©, matthieu.fertre@kerlabs.com
#

source `dirname $0`/lib_faf.sh

run_test() {
    krgcapset -d +DISTANT_FORK

    cd $TMPSUBDIR
    fork-loop -l 10000
    r=$?
    cd - > /dev/null

    if [ $r -eq 0 ]; then
	true
    else
	false
}

setup $@ || exit $?

setup_tmp_dir || exit $?

LTP_print_step_info "Forking..."

(run_test)

r=$?
print_success $r

cleanup_tmp_dir

exit $r
