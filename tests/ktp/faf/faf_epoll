source `dirname $0`/lib_faf.sh

run_test() {
    krgcapset -d +DISTANT_FORK

    fepoll kmatt0 9998
    r=$?

    if [ $r -eq 0 ]; then
	true
    else
	false
    fi
}

setup $@ || exit $?

LTP_print_step_info "Running fepoll..."

(run_test)

r=$?
print_success $r

exit $r
