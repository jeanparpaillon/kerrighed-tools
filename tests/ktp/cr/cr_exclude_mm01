#
# Description:  Test program for Kerrighed checkpoint/restart of an application
#               composed of two processes and that to some mm exclusions.
#
# Author:       Matthieu Fertr√©, matthieu.fertre@kerlabs.fr
#

source `dirname $0`/lib_cr.sh

description="(2 processes) Basic C/R test: Run, C, K, R"

# Application with 2 processes and mm exclusions
TESTCMD="bi-exclude-mm"
TESTCMD_OPTIONS="-q"

# Basic C/R test for a tree of processes: Run, C, K, R
cr-exclude-mm01()
{
    TCID="$FUNCNAME"               # Identifier of this testcase.
    TST_COUNT=$[$TST_COUNT+1]      # Test case number.

    runcommand +CHECKPOINTABLE 2 || return $?

    checkpoint_process $PID $TESTCMD || return $?

    kill_group $PID $TESTCMD || return $?

    restart_process $PID 1 $TESTCMD || return $?

    kill_group $PID $TESTCMD || return $?

    print_success $?
    return $?
}

CR_setup $@ || exit $?

cr-exclude-mm01 || exit $?
