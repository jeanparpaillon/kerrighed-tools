#!/bin/sh

set -e

KRG_ROOT=/
# Path inside $KRG_ROOT
KRGINIT=@bindir@/krginit

. @sysconfdir@/kerrighed/krginit_helper.conf

# Prefer caller args
if [ $# -gt 0 ]; then
	KRGINIT_ARGS=
fi

mount -t proc krg-procfs $KRG_ROOT/proc

cd  $KRG_ROOT
if [ "$KRG_ROOT" != "/" ]; then
	mount --move . /
fi
exec chroot . $KRGINIT -s $KRGINIT_ARGS "$@"
